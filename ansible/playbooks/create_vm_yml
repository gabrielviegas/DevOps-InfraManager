---
- name: Criar VM no VirtualBox
  hosts: localhost
  tasks:
    - name: Criar VM
      ansible.builtin.command: >
        VBoxManage createvm --name "VMTeste1" --ostype Ubuntu_64 --register

    - name: Configurar CPU e Memória
      ansible.builtin.command: >
        VBoxManage modifyvm "VMTeste1" --cpus 2 --memory 2048

    - name: Criar disco SATA
      ansible.builtin.command: >
        VBoxManage createhd --filename "/home/viegas/devops/VMTeste1.vdi" --size 10240

    - name: Adicionar controlador SATA
      ansible.builtin.command: >
        VBoxManage storagectl "VMTeste1" --name "SATA Controller" --add sata --controller IntelAhci

    - name: Anexar disco SATA à VM
      ansible.builtin.command: >
        VBoxManage storageattach "VMTeste1" --storagectl "SATA Controller" --port 0 --device 0 --type hdd --medium "/home/viegas/devops/VMTeste1.vdi"

    - name: Configurar rede interna
      ansible.builtin.command: >
        VBoxManage modifyvm "VMTestVMTeste1eGabriel1" --nic1 intnet --intnet1 "intnet"
