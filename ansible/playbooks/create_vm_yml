---
- name: Criar VM no VirtualBox
  hosts: localhost
  tasks:
    - name: Excluir VM se já existir
      ansible.builtin.command: >
        VBoxManage unregistervm VMTesteGabriel1 --delete || true

    - name: Criar VM
      ansible.builtin.command: >
        VBoxManage createvm --name "VMTesteGabriel1" --ostype Ubuntu_64 --register

    - name: Configurar CPU e Memória
      ansible.builtin.command: >
        VBoxManage modifyvm "VMTesteGabriel1" --cpus 2 --memory 2048

    - name: Criar disco SATA
      ansible.builtin.command: >
        VBoxManage createhd --filename "/home/viegas/devops/VMTesteGabriel1.vdi" --size 10240

    - name: Adicionar controlador SATA
      ansible.builtin.command: >
        VBoxManage storagectl "VMTesteGabriel1" --name "SATA Controller" --add sata --controller IntelAhci

    - name: Anexar disco SATA à VM
      ansible.builtin.command: >
        VBoxManage storageattach "VMTesteGabriel1" --storagectl "SATA Controller" --port 0 --device 0 --type hdd --medium "/home/viegas/devops/VMTesteGabriel1.vdi"

    - name: Configurar rede interna
      ansible.builtin.command: >
        VBoxManage modifyvm "VMTesteGabriel1" --nic1 intnet --intnet1 "intnet"
