---
- name: Criar VM no VirtualBox
  hosts: localhost
  tasks:
    - name: Criar VM
      ansible.builtin.command: >
        VBoxManage createvm --name "VMTeste" --ostype Ubuntu_64 --register

    - name: Configurar CPU e MemÃ³ria
      ansible.builtin.command: >
        VBoxManage modifyvm "VMTeste" --cpus 2 --memory 2048

    - name: Criar disco SATA
      ansible.builtin.command: >
        VBoxManage createhd --filename "/path/to/VMTeste.vdi" --size 10240

    - name: Adicionar controlador SATA
      ansible.builtin.command: >
        VBoxManage storagectl "VMTeste" --name "SATA Controller" --add sata --controller IntelAhci

    - name: Anexar disco SATA Ã  VM
      ansible.builtin.command: >
        VBoxManage storageattach "VMTeste" --storagectl "SATA Controller" --port 0 --device 0 --type hdd --medium "/path/to/VMTeste.vdi"

    - name: Configurar rede interna
      ansible.builtin.command: >
        VBoxManage modifyvm "VMTeste" --nic1 intnet --intnet1 "intnet"

    - name: Iniciar VM
      ansible.builtin.command: >
        VBoxManage startvm "VMTeste" --type headless
